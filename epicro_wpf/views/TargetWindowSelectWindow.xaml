<Window x:Class="epicro_wpf.views.TargetWindowSelectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:epicro_wpf.views"
        mc:Ignorable="d"
        Title="인식대상" Height="140" Width="207">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <ComboBox Margin="20,20,20,0" VerticalAlignment="Top"
                  ItemsSource="{Binding WindowList}"
                  SelectedItem="{Binding SelectedWindow}"
                  DisplayMemberPath="Title"/>
        <Button Content="적용"
            Command="{Binding ApplyCommand}"
            CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
            Margin="41,57,115,0" Height="30" VerticalAlignment="Top" />
        <Button Content="닫기" 
            Command="{Binding CloseCommand}"
            CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
            Margin="115,57,41,0" Height="30" VerticalAlignment="Top"/>
    </Grid>
</Window>
